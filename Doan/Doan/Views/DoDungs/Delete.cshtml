@model Doan.Models.DoDung
@using Doan.Models

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/Layout_Menu.cshtml";
}

<h2>Xóa đồ dùng</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Đồ Dùng</h4>
    <hr />
    <div style="display:flex">
        <div style="padding-left:100px">
            <dl style="max-width:400px; max-height:400px">
                @Html.Image("../../" + @Model.HinhDD, @Model.HinhDD, "300")
            </dl>
        </div>

        <div>
            <div class="form-group">
                <label class="control-label col-md-12" style="font-weight:bold"> Loại đồ dùng</label>
                <div class="col-md-12">
                    @Html.DisplayFor(model => model.LoaiDoDung.TenLoai)
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-12" style="font-weight:bold"> Tên đồ dùng</label>
                <div class="col-md-12">
                    @Html.DisplayFor(model => model.TenDD)
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-12" style="font-weight:bold"> Giá </label>
                <div class="col-md-12">
                    @Html.DisplayFor(model => model.Gia)
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-12" style="font-weight:bold"> Số lượng </label>
                <div class="col-md-12">
                    @Html.DisplayFor(model => model.SoLuong)
                </div>
            </div>
        </div>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions" style="padding-left:150px">
            <input type="submit" value="Delete" class="btn btn-default" style="background-color:red" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
