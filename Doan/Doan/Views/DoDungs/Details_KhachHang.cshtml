@model Doan.Models.DoDung
@using Doan.Models

@{
    ViewBag.Title = "Chi tiết đồ dùng";
    Layout = "~/Views/Shared/Layout_Coffee.cshtml";
}

<h2>Chi tiết</h2>

<div>
    <h4>Đồ dùng</h4>
    <hr />
    <div style="display:flex">
        <div style="padding-left:100px">
            <dl>
                <dt style="max-width: 700px; max-height:700px">
                    @Html.Image("../../" + @Model.HinhDD, @Model.HinhDD, "100")
                </dt>
            </dl>
        </div>

        <div>
            <div class="form-group">
                <label class="control-label col-md-12" style="font-weight:bold"> Loại đồ dùng</label>
                <div class="col-sm-12">
                    @Html.DisplayFor(model => model.LoaiDoDung.TenLoai)
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-12" style="font-weight:bold"> Tên đồ dùng</label>
                <div class="col-md-12">
                    @Html.DisplayFor(model => model.TenDD)
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-12" style="font-weight:bold"> Giá </label>
                <div class="col-md-12">
                    @Html.DisplayFor(model => model.Gia)
                </div>
            </div>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
