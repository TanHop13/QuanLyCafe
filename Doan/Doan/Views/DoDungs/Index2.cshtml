@model IEnumerable<Doan.Models.DoDung>
@using Doan.Models

@{
    ViewBag.Title = "Danh muc do dung";
    Layout = "~/Views/Shared/Layout_Menu.cshtml";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <h6>Tên loại</h6>
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.TenDD)*@
            @Html.ActionLink("Tên sản phẩm", "Index2", new { Sort = ViewBag.SortByName })
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Gia)*@
            @Html.ActionLink("Giá", "Index2", new { Sort = ViewBag.SortByPrice })
        </th>
        <th>
            <h6>Số Lượng</h6>
        </th>
        <th>
            <h6>Hình đồ dùng</h6>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LoaiDoDung.TenLoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenDD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td style="max-width: 50px; height: auto">
                @*@Html.DisplayFor(modelItem => item.HinhDD)*@
                @Html.Image("../" + item.HinhDD, "alt", "100")

            </td>
            <td class="btn btn-info" style="margin:30px 0 20px 5px">
                @Html.ActionLink("Edit", "Edit", new { id = item.MaDD })
            </td>
            <td class="btn btn-warning" style="margin:30px 0 20px 5px">
                @Html.ActionLink("Details", "Details", new { id = item.MaDD })
            </td>
            <td class="btn btn-danger" style="margin:30px 0 20px 5px">
                @Html.ActionLink("Delete", "Delete", new { id = item.MaDD })
            </td>
        </tr>
    }
</table>

