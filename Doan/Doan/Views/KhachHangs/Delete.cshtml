@model Doan.Models.KhachHang

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/Layout_Menu_NhanVien.cshtml";
}

<h2>XÓA KHÁCH HÀNG</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <div>
        <h4>Khách Hàng</h4>
        <hr />
        <div class="form-group">
            <label class="control-label col-md-3" style="font-weight:bold"> Tên khách hàng</label>
            <div class="col-md-4">
                @Html.DisplayFor(model => model.TenKH)
            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-md-3" style="font-weight:bold"> Loại khách hàng</label>
            <div class="col-md-4">
                @Html.DisplayFor(model => model.LoaiKhachHang.TenLoai)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3" style="font-weight:bold"> Số điện thoại </label>
            <div class="col-md-4">
                @Html.DisplayFor(model => model.SDT)
            </div>
        </div>
    </div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions" style="padding-left:420px">
            <input type="submit" value="Delete" class="btn btn-default" style="background-color:red" /> |
            @Html.ActionLink("Back to List", "UserNhanVien")
        </div>
    }
</div>
