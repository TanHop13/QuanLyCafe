<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!-- basic -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- mobile metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1">
    <!-- site metas -->
    <title>Doze Cafe</title>
    <meta name="keywords" content="">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- bootstrap css -->
    <link rel="stylesheet" type="text/css" href="~/Web/html/css/bootstrap.min.css">
    <!-- style css -->
    <link rel="stylesheet" type="text/css" href="~/Web/html/css/style.css">
    <!-- Responsive-->
    <link rel="stylesheet" href="~/Web/html/css/responsive.css">
    <!-- fevicon -->
    <link rel="icon" href="~/Web/html/images/fevicon.png" type="image/gif" />
    <!-- font css -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;800&display=swap" rel="stylesheet">
    <!-- Scrollbar Custom CSS -->
    <link rel="stylesheet" href="~/Web/html/css/jquery.mCustomScrollbar.min.css">
    <!-- Tweaks for older IEs-->
    <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
</head>
<body>
    @{var user = Session["User"] as Doan.Models.User;}
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Admin</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="~/Users/Index">Users</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/KhachHangs/Index">Khach Hang</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="~/LoaiDoDungs/Index" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            LoaiHangHoa
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Loai1</a></li>
                            <li><a class="dropdown-item" href="#">Loai2</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">Loai3</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/NhaCungCaps/Index">NhaCungCap</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" aria-disabled="true">ChiTietHoaDon</a>
                    </li>
                </ul>
                <form class="form-inline my-2 my-lg-0">
                    <div class="login_bt">
                        <ul>
                            <li>
                                @if (user == null)
                                {
                                <li>
                                    @Html.ActionLink("Login", "Login", "Index")
                                </li>
                            }
                            else
                            {
                                <a href="#" , style="color:black">Xin chao: @user.TenUser</a>
                                @Html.ActionLink("Đăng Xuất", "SignOut", "Index")
                            }
                                <li><a href="#"><i class="fa fa-search" aria-hidden="true"></i></a></li>
                            </ul>
                        </div>
                    </form>
                    <form class="d-flex" role="search">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>
                </div>
        </div>
    </nav>
    @RenderBody()
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Web/html/js/jquery.min.js"></script>
    <script src="~/Web/html/js/popper.min.js"></script>
    <script src="~/Web/html/js/bootstrap.bundle.min.js"></script>
    <script src="~/Web/html/js/jquery-3.0.0.min.js"></script>
    <script src="~/Web/html/js/plugin.js"></script>
    <!-- sidebar -->
    <script src="~/Web/html/js/jquery.mCustomScrollbar.concat.min.js"></script>
    <script src="~/Web/html/js/custom.js"></script>
</body>
</html>
