<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!-- basic -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- mobile metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="viewport" content="initial-scale=1, maximum-scale=1">
    <!-- site metas -->
    <title>Doze Cafe</title>
    <meta name="keywords" content="">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- bootstrap css -->
    <link rel="stylesheet" type="text/css" href="~/Web/html/css/bootstrap.min.css">
    <!-- style css -->
    <link rel="stylesheet" type="text/css" href="~/Web/html/css/style.css">
    <!-- Responsive-->
    <link rel="stylesheet" href="~/Web/html/css/responsive.css">
    <!-- fevicon -->
    <link rel="icon" href="~/Web/html/images/fevicon.png" type="image/gif" />
    <!-- font css -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;800&display=swap" rel="stylesheet">
    <!-- Scrollbar Custom CSS -->
    <link rel="stylesheet" href="~/Web/html/css/jquery.mCustomScrollbar.min.css">
    <!-- Tweaks for older IEs-->
    <link rel="stylesheet" href="https://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
</head>
<body>
    @{var user = Session["User"] as Doan.Models.User;}
    <nav class="navbar navbar-expand-lg" style="background-color: aqua">
        <div class="container-fluid">
            <a href="@Url.Action("Edit", "Users", new {id = @user.MaUser})" , class="navbar-brand">NHÂN VIÊN</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="~/NhanVien/index2">Thực đơn</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="~/KhachHangs/UserNhanVien">Khách Hàng</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="~/HoaDons/Index">Hóa đơn</a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("NhanVien", "NgayLams", new {id = @user.MaUser})" , class="nav-link active">Phân công</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="~/DoDungs/Index_Cart">Giỏ hàng</a>
                    </li>
                </ul>
                <form class="form-inline my-2 my-lg-0">
                    <div class="login_bt">
                        <ul>
                            <li>
                                @if (user == null)
                                {
                                <li>
                                    @Html.ActionLink("Login", "Login", "Index")
                                </li>
                            }
                            else
                            {
                                <a href="#" , style="color:black">Chào: @user.TenUser</a>
                                @Html.ActionLink("Đăng Xuất", "SignOut", "Index")
                            }
                            </ul>
                        </div>
                    </form>
                </div>
            </div>
        </nav>
        @RenderBody()
        <script src="~/Web/html/js/Controller/Cart.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/Web/html/js/jquery.min.js"></script>
        <script src="~/Web/html/js/popper.min.js"></script>
        <script src="~/Web/html/js/bootstrap.bundle.min.js"></script>
        <script src="~/Web/html/js/jquery-3.0.0.min.js"></script>
        <script src="~/Web/html/js/plugin.js"></script>
        <!-- sidebar -->
        <script src="~/Web/html/js/jquery.mCustomScrollbar.concat.min.js"></script>
        <script src="~/Web/html/js/custom.js"></script>
    </body>
</html>

