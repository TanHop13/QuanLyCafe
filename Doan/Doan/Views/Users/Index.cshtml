@model IEnumerable<Doan.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout_Menu.cshtml";
}

<h2>Thông tin nhân viên</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <h6>Tên User</h6>
        </th>
        <th>
            <h6>Địa chỉ</h6>
        </th>
        <th>
            <h6>SĐT</h6>
        </th>
        <th>
            <h6>Phân Quyền</h6>
        </th>
        <th>
            <h6>Mật khẩu</h6>
        </th>
        <th>
            <h6>Tình trạng</h6>
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenUser)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiaChi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SDT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhanQuyen)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MatKhau)
        </td>
        <th>
            @Html.DisplayFor(model => item.activate)
        </th>
        <td class="btn btn-info" style="margin:30px 0 20px 5px">
            @Html.ActionLink("Edit", "Edit_Admin", new { id = item.MaUser })
        </td>
        <td class="btn btn-warning" style="margin:30px 0 20px 5px">
            @Html.ActionLink("Details", "Details", new { id = item.MaUser })
        </td>
        <td class="btn btn-danger" style="margin:30px 0 20px 5px">
            @Html.ActionLink("Delete", "Delete", new { id = item.MaUser })
        </td>
    </tr>
}

</table>
